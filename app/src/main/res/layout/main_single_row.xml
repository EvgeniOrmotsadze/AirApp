<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_single_row_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_single_row_key"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAlignment="center"
            android:fontFamily="@font/sofia_pro_medium"
            android:textColor="@color/white"
            android:text="  19.50  "
            android:textSize="19dp"
            android:background="@drawable/station_text_shape"/>
        <TextView
            android:id="@+id/main_single_row_value"
            android:layout_width="wrap_content"
            android:fontFamily="@font/sofia_pro_bold"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:text="PM10 ug/m3"
            android:textSize="16dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stationText"/>

</LinearLayout>